<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="start"
        tools:ignore="ExtraText">

        <Spinner
            android:id="@+id/newsSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/topStoriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Stories"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp" />


        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="1dp"
            android:contentDescription="Home"
            android:scaleType="centerCrop"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TECH WEEKLY: How F1’s regulations changes made it increasingly difficult for Ricciardo to find his old Red Bull form."
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="start"
            android:padding="1dp"
            android:layout_marginTop="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imageGuenther"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:contentDescription="Guenther Steiner Feature"
                android:src="@drawable/home1" />

            <TextView
                android:id="@+id/guentherFeatureTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="What the teams said – Race day in Azerbaijan"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageMassaAlonso"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:contentDescription="Massa and Alonso Feature"
                android:src="@drawable/home2" />

            <TextView
                android:id="@+id/massaFeatureTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Antonelli ready to deal with F1 pressure – but insists he doesn’t want to be seen as Hamilton’s ‘replacement’"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageNewey"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:contentDescription="Newey Feature"
                android:src="@drawable/home3" />

            <TextView
                android:id="@+id/neweyFeatureTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="From Fangio to Hamilton – Who are the oldest world champions in the history of Formula 1?"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>